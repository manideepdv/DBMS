<script type="text/javascript">

  function checkPassword(str)
  {
    var re = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}$/;
    return re.test(str);
  }

  function checkForm(form)
  {
    if(form.username.value == "") {
      alert("Error: Username cannot be blank!");
      form.username.focus();
      return false;
    }
    re = /^\w+$/;
    if(!re.test(form.username.value)) {
      alert("Error: Username must be in the format specified");
      form.username.focus();
      return false;
    }
    if(form.password.value != "" && form.password.value == form.confirm_password.value) {
      if(!checkPassword(form.password.value)) {
        alert("Password must contain atleat one Uppercase alphabet, one numbers and min of 6 characters");
        form.password.focus();
        return false;
      }
    } else {
      alert("Error: Please check that you've entered and confirmed your password!");
      form.password.focus();
      return false;
    }
    return true;
  }

</script>
<style type="text/css">
